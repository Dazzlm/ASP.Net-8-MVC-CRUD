@model List<CRUD.Data.Entidades.Empleado>;
@{
    ViewData["Title"] = "Inicio";
}

<div class="row">
    <div class="col-sm-12 ">
        <div class="panel-heading">
            <h3 class="panel-title">Lista de Empleados</h3>
        </div>
        <a asp-action="Crear" class="btn btn-success"><i class="fa-solid fa-user-plus"></i> Nuevo Empleado </a>
        <br/>
        <br />
        <table class="table table-hover table-responsive table-striped table-bordered" id="TablaEmpleados">
            <thead class="text-center">
                <tr>
                    <th>Documento</th>
                    <th>Nombre Completo</th>
                    <th>Edad</th>
                    <th>Correo</th>
                    <th>Telefono</th>
                    <th>Titulo</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Fecha de Contratacion</th>
                    <th>Salario</th>
                    <th>Foto</th>
                    <th>Estado</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var empleado in Model)
                {
                    <tr>
                        <td>@empleado.Documento</td>
                        <td>@empleado.Nombre</td>
                        <td>@empleado.Edad</td>
                        <td>@empleado.Correo</td>
                        <td>@empleado.Telefono</td>
                        <td>@empleado.Titulo</td>
                        <td>@empleado.FechaNacimiento.ToString()</td>
                        <td>@empleado.FechaContrato.ToString()</td>
                        <td>@empleado.Salario</td>
                        <td><img src=@empleado.RutaImagen style="height:150px; max-width:200px;" class="text-center"/></td>
                        <td>@(empleado.IsActivo ? "Activo" : "No Activo")</td>
                        <td>
                            <div class="text-center">
                                <a asp-action="Editar" asp-route-id="@empleado.ID" class="btn btn-warning mb-2"><i class="fa-solid fa-pen-to-square"></i></a>
                                <br />
                                <a asp-action="Detalles" asp-route-id="@empleado.ID" class="btn btn-primary mb-2 "><i class="fa-solid fa-circle-info"></i></a>
                                <br />
                                <a asp-action="Eliminar" asp-route-id="@empleado.ID" class="btn btn-danger mb-2"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
 

